pipeline{
    agent{
        node{
            label 'docker'
        }
    }
    stages{
        stage('verify tools)') {
            step{
                sh '''
                    docker version
                    docker-compose version
                '''
            }
        }

        stage('sonarqube-scanning'){
            steps{
                script{
                    withSonarQubeEnv('SDPM_Sonarqube')
                    def scannerHome = tool 'SonarQube-Scanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}